# VC Scout Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# REQUIRED CONFIGURATION
# ============================================================================

# Groq API Key (required) - FREE with generous limits (30 RPM)
# Get yours at: https://console.groq.com/keys
GROQ_API_KEY=gsk_your_groq_api_key_here

# Neon Postgres Database URL (required)
# Get a free database at: https://neon.tech
# Format: postgresql://user:password@host/database?sslmode=require
NEON_DATABASE_URL=postgresql://user:password@ep-xxx.us-east-2.aws.neon.tech/vcscout?sslmode=require

# ============================================================================
# OPTIONAL - LLM CONFIGURATION
# ============================================================================

# LLM Model Selection (default: llama-3.3-70b-versatile)
# Options: llama-3.3-70b-versatile, qwen-qwq-32b, mixtral-8x7b-32768
LLM_MODEL=llama-3.3-70b-versatile

# Google Gemini API Key (optional - legacy fallback)
# Get yours at: https://aistudio.google.com/apikey
GEMINI_API_KEY=

# ============================================================================
# OPTIONAL - PIVOTING CONFIGURATION
# ============================================================================

# Maximum pivot attempts before generating Market Reality Report
MAX_PIVOT_ATTEMPTS=3

# Score threshold (1-10) for triggering pivots
# Ideas scoring at or below this will trigger a pivot
PIVOT_THRESHOLD=5

# ============================================================================
# OPTIONAL - AGENT SETTINGS
# ============================================================================

# Agent Timeouts (seconds)
AGENT_TIMEOUT=60

# DuckDuckGo Search Settings
SEARCH_NUM_RESULTS=10

# Crawl4AI Settings
SCRAPE_TIMEOUT=30
MAX_COMPETITORS_TO_SCRAPE=5

# ============================================================================
# OPTIONAL - SESSION SETTINGS
# ============================================================================

# Streamlit Session Cookie Name
SESSION_COOKIE_NAME=vcscout_session
